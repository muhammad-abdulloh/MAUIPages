<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIPages.Pages.DemoContentPage2"
             Title="DemoContentPage2"
             BackgroundColor="#0a5230">
    <VerticalStackLayout>
        <Label 
          Text="This is content page 2"
          FontSize="20"
          TextColor="White"
          FontAttributes="Bold"
          Margin="20"
          VerticalOptions="Center" 
          HorizontalOptions="Center" />

        <Button
            x:Name="contentPage3Button"
            Text="Open Content page 3"
              Margin="20"
            Clicked="contentPage3Button_Clicked">
        </Button>

        <Button
            x:Name="closeButton"
            Text="Close me"
              Margin="20"
            Clicked="closeButton_Clicked">

        </Button>
    </VerticalStackLayout>
</ContentPage>