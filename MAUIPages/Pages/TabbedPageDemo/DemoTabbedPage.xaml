<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIPages.Pages.TabbedPageDemo.DemoTabbedPage"
             Title="DemoTabbedPage"
            BarTextColor="DarkGreen"
            SelectedTabColor="Red"
            UnselectedTabColor="DarkBlue"
            BarBackgroundColor="Beige"
            >
    
 

    <ContentPage Title="Home" IconImageSource="home.png">
        <Label Text="This is Home Content Page"
               Margin="20"
               FontAttributes="Bold"
               FontSize="22"
               ></Label>
    </ContentPage>

    <ContentPage Title="Cart" IconImageSource="grocery_store.png">
        <Label Text="This is Cart Content Page"
               Margin="20"
                FontAttributes="Bold"
                FontSize="22"
               ></Label>
    </ContentPage>

    <ContentPage Title="Profile" IconImageSource="user.png">
        <Label Text="This is Profile Content Page"
               Margin="20"
                FontAttributes="Bold"
                FontSize="22"
               ></Label>
    </ContentPage>

</TabbedPage>